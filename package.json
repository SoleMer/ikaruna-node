{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "scripts": {
        "start": "ts-node-dev --respawn packages/server/src/index.ts",
        "heroku-prebuild": "cd packages/server",
        "heroku-postbuild": "cd packages/server && yarn build"
    },
    "engines": {
        "node": "12.x"
    },
    "nohoist": [
        "**/react-native",
        "**/react-native/**",
        "**/expo",
        "**/expo/**",
        "**/react-native-typescript-transformer",
        "**/react-native-typescript-transformer/**",
        "**/metro-bundler-config-yarn-workspaces",
        "**/metro-bundler-config-yarn-workspaces/**",
        "**react-native",
        "**react-native**"
    ],
    "devDependencies": {
        "@types/connect-pg-simple": "^4.2.2",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/express-session": "^1.17.3",
        "@types/passport": "^1.0.6",
        "@types/pg": "^7.14.11",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "passport": "^0.4.1",
        "sequelize": "^6.5.1",
        "ts-node-dev": "^1.1.6",
        "typescript": "^4.2.3"
    }
}
