{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "scripts": {
    "start": "ts-node-dev --respawn src/index.ts",
    "heroku-postbuild": "npm build"
  },
  "engines": {
    "node": "12.x"
  },
  "nohoist": [
    "**/react-native",
    "**/react-native/**",
    "**/expo",
    "**/expo/**",
    "**/react-native-typescript-transformer",
    "**/react-native-typescript-transformer/**",
    "**/metro-bundler-config-yarn-workspaces",
    "**/metro-bundler-config-yarn-workspaces/**",
    "**react-native",
    "**react-native**"
  ],
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/connect-pg-simple": "^4.2.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/passport": "^1.0.6",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.14.11",
    "@types/uniqid": "^5.3.0",
    "@types/uuid": "^8.3.0",
    "connect-pg-simple": "^6.2.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "passport": "^0.4.1",
    "pg": "^8.5.1",
    "sequelize": "^6.5.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "uniqid": "^5.3.0",
    "uuid": "^8.3.2"
  }
}
